@page "/certification"
@model Asharea_viewer.Pages.dashboard.certificationModel
@{
    ViewData["Title"] = "Certification";
}
@section sideInfo {
    <!-- Side info -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="media">
                <img src="assets/img/avatars/profile_default.jpg" alt class="ui-w-60 rounded-circle">
                <div class="media-body pt-2 ml-3">
                    <h5 class="mb-2 u_full_name">Nellie Maxwell</h5>

                </div>
            </div>
            <div class="text-muted small mt-3">Project Manager Autodesk</div>
            <h5 class="font-weight-bold mt-2">Autodesk CAD</h5>
            <hr class="border-light m-0">
            <div class="text-muted small pt-3 text-uppercase">Certification Level</div>
            <h5 class="mb-4 font-weight-bold mt-2">
                Level 1
            </h5>
            <div class="text-muted small pt-3 text-uppercase">Share your progress</div>
            <div class="text-muted d-flex mt-3">
                <div><i class="ion ion-md-desktop ml-4"></i></div>
                <div><i class="ion ion-md-analytics ml-4"></i></div>
                <div><i class="ion ion-md-eye ml-4"></i></div>
            </div>
            <div class="text-muted small pt-3 text-uppercase">Program newsletter</div>
            <label class="custom-control custom-checkbox mt-3 text-muted ml-3">
                <input type="checkbox" class="custom-control-input">
                <span class="custom-control-label">Subscribe</span>
            </label>

        </div>
    </div>
    <!-- / Side info -->
}

@section navArchor {
    <h4 class="font-weight-bold py-3 mb-4">
        <a href="/software" class="text-muted font-weight-light">Dashboard / </a> <a href="/certification">Certification</a>
    </h4>
}
<div class="card mb-4">
    <ul class="list-group list-group-flush">

        <li class="list-group-item py-4">
            <div class="media flex-wrap">
                <div class="circle-icon border-success">
                    <img src="~/imgs/icons/shield.png"></img>
                </div>
                <div class="media-body ml-sm-4">
                    <h5 class="mb-2">
                        <a href="javascript:void(0)" class="text-body">Level 1 test</a>&nbsp;
                    </h5>

                    <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec odio ligula, rhoncus scelerisque ullamcorper iaculis.</div>
                    <div>software: <strong>Autodesk Revit</strong></div>
                    <div class="mt-3">
                       @*<button class="btn btn-primary ui-w-120" data-toggle="modal" data-target="#upload-modal">Validate</button>*@
                        <button class="btn btn-primary ui-w-120">Validate</button>
                    </div>
                </div>
            </div>
        </li>
        <li class="list-group-item py-4">
            <div class="media flex-wrap">
                <div class="circle-icon border-warning">
                    <img src="~/imgs/icons/shield.png"></img>
                </div>
                <div class="media-body ml-sm-4">
                    <h5 class="mb-2">
                        <a href="javascript:void(0)" class="text-body">Level 2 test</a>&nbsp;
                    </h5>

                    <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec odio ligula, rhoncus scelerisque ullamcorper iaculis.</div>
                    <div>software: <strong>Autodesk Revit</strong></div>
                    <div class="mt-3">
                        <button class="btn btn-primary ui-w-120" onclick="validateProduct()">Validate</button>
                    </div>
                </div>
            </div>
        </li>
    </ul>
  
</div>
<!-- Modal template -->
<div class="modal fade" id="upload-modal">
    <div class="modal-dialog modal-lg">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mx-auto text-center">
                    <i class="lnr lnr-laptop d-block font-weight-light" style="font-size: 50px;"></i>
                    New Model
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/upload" class="dropzone needsclick" id="dropzone-demo">
                            <div class="dz-message needsclick">
                                Drop files here or click to upload
                                <span class="note needsclick">
                                    (This is just a demo dropzone. Selected files are
                                    <strong>not</strong> actually uploaded.)
                                </span>
                            </div>
                            <div class="fallback">
                                <input name="file" type="file" multiple>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
<script src="~/assets/js/forms_file-upload.js"></script>
<script>
    $(function () {
        @*init_dropzone('dropzone-demo', true);*@
    });
    function validateProduct() {
        window.location = '/view/test_case';
    }
</script>